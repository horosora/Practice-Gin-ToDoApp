<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>ToDoApp</title>
    </head>
    <body>
        <form method="post" action="/add">
            <p><textarea name="contents" cols="40" rows="5"></textarea></p>
            <p><input type="submit" value="add"></p>
        </form>
        <ul>
            {{ range .todo }}
                <li>{{ .Id }} : {{ .Content }}</li>
            {{ end }}
        </ul>
        <form method="get" action="/rm">
            <p><input type="submit" value="remove"></p>
        </form>
    </body>
</html>
